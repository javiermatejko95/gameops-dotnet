<nav class="navbar">
    <div class="navbar-container">
        <div class="navbar-brand" @onclick='() => Nav.NavigateTo("/")'>
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
            <span>GameOps</span>
        </div>

        <div class="navbar-menu">
            <a href="/" class="nav-link @GetActiveClass("/")">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                Home
            </a>
            <a href="/studios" class="nav-link @GetActiveClass("/studios")">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                    <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                </svg>
                Studios
            </a>
        </div>
    </div>
</nav>

@code {
    [Inject]
    private NavigationManager Nav { get; set; } = default!;

    private string GetActiveClass(string path)
    {
        var currentPath = new Uri(Nav.Uri).AbsolutePath;

        if (path == "/")
            return currentPath == "/" ? "active" : "";

        return currentPath.StartsWith(path) ? "active" : "";
    }
}