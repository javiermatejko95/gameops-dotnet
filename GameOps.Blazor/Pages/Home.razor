@page "/"
@inject NavigationManager Nav

<PageTitle>Home - Game Library</PageTitle>

<div class="home-container">
    <div class="welcome-content">
        <div class="icon-container">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
            </svg>
        </div>

        <h1 class="welcome-title">Welcome to Your Game Library</h1>
        <p class="welcome-subtitle">Manage your studios and games collection</p>

        <button class="btn-enter" @onclick="GoToStudios">
            Enter Library
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7" />
            </svg>
        </button>
    </div>
</div>

@code {
    private void GoToStudios()
    {
        Nav.NavigateTo("/studios");
    }
}